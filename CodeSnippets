class Product:
    def __init__(self, name, amount, priceForEach, quantity, addedToCart, total_price):
        self.name = str(name)
        self.amount = int(amount)
        self.priceForEach = int(priceForEach)
        self.quantity = int(quantity)
        self.addedToCart = bool(addedToCart)
        self.total_price = int(total_price)

    def addToCart(self):
        self.total_price = self.total_price + self.priceForEach * self.quantity
    def removeFromCart(self):
        self.total_price = self.total_price - self.priceForEach * self.quantity

MasalaKhakhara = Product("Masala Khakhara", )


