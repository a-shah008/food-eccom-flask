user_obj = User.query.filter_by(id=current_user.id).first()
            if user_obj.creditcardnum and user_obj.securitycode and user_obj.expirationdate and user_obj.street and user_obj.city and user_obj.state and user_obj.postalzip:
                print("Already has existing data, adding new to the database")
                current_user.email = form.email.data
                current_user.phonenumber = form.phonenumber.data
                current_user.creditcardnum = form.creditcardnum.data
                current_user.securitycode = form.securitycode.data
                current_user.expirationdate = form.expirationdate.data
                current_user.street = form.street.data
                current_user.city = form.city.data
                current_user.state = form.state.data
                current_user.postalzip = form.postalzip.data
                db.session.commit()
                flash("Your account has been updated!", "success")
                return redirect(url_for("account"))
            else:
                current_user.creditcardnum = form.creditcardnum.data
                current_user.securitycode = form.securitycode.data
                current_user.expirationdate = form.expirationdate.data
                current_user.street = form.street.data
                current_user.city = form.city.data
                current_user.state = form.state.data
                current_user.postalzip = form.postalzip.data
                db.session.commit()
                flash("Your account has been updated!", "success")
                return redirect(url_for("account"))


