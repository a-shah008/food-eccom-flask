        function decrement() {
            document.getElementById('makh').stepDown();
            document.getElementById('jmkh').stepDown();
            document.getElementById('jtkh').stepDown();
            document.getElementById('plkh').stepDown();
            document.getElementById('amkh').stepDown();
            document.getElementById('mekh').stepDown();
            document.getElementById('plpa').stepDown();
            document.getElementById('mapa').stepDown();
            document.getElementById('plse').stepDown();
            document.getElementById('homi').stepDown();
            document.getElementById('kmmi').stepDown();
            document.getElementById('sumi').stepDown();
            document.getElementById('pach').stepDown();
            document.getElementById('mepa').stepDown();
            document.getElementById('stga').stepDown();
            document.getElementById('bhga').stepDown();
            document.getElementById('ph').stepDown();
            document.getElementById('bsbh').stepDown();
            document.getElementById('rase').stepDown();
        }


