def addItemToSpecialsDB(image_file, name, amount, priceForEach):
    specialItem = SpecialsProduct(image_file=image_file, name=name, amount=amount, priceForEach=priceForEach)
    db.session.add(specialItem)
    db.session.commit()
def addItemToDrySnacksDB(image_file, name, amount, priceForEach):
    drysnackItem = DrySnacksProduct(image_file=image_file, name=name, amount=amount, priceForEach=priceForEach)
    db.session.add(drysnackItem)
    db.session.commit()
def addItemToSweetsDB(image_file, name, amount, priceForEach):
    sweetItem = SweetsProduct(image_file=image_file, name=name, amount=amount, priceForEach=priceForEach)
    db.session.add(sweetItem)
    db.session.commit()
def addItemToKhakharasDB(image_file, name, amount, priceForEach):
    khakharaItem = KhakharasProduct(image_file=image_file, name=name, amount=amount, priceForEach=priceForEach)
    db.session.add(khakharaItem)
    db.session.commit()

