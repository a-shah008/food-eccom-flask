if request.form.get("sendcodebutton"):   
                sixdigitcode = ""
                random_numbers = []
                for i in range(0,6):
                    digit = random.randint(1,9)
                    random_numbers.append(digit)
                sixdigitcode.join(random_numbers)
                send_TwoFactorAuthenticationEmail(form.email.data, sixdigitcode)
                flash("An email with instructions has been sent to the email provided above.")
                if request.form.get("submitting6digitcode"):
                    user_input = str(request.form.get("submitting6digitcode"))
                    correct_code = str(sixdigitcode)
                    if user_input == correct_code:
                        db.session.add(user)
                        db.session.commit()
                        flash(f"Welcome, {form.email.data}. Your account has been created successfully!", "success")
                        login_user(user)
                        next_page = request.args.get('next')
                        return redirect(next_page) if next_page else redirect(url_for("snack_page"))
                    else:
                        flash("That is the incorrect code. Please check your spelling and email.", "danger")





all_lineitems = Lineitem.query.filter_by(buyer_id=current_user.id)
    lineitem_obj = Lineitem.query.filter_by(name=item).first()
    item_id_cart = lineitem_obj.product_id
    product = Product.query.filter_by(id=item_id_cart).first()
    item_price_cart = product.unit_price
    total_price_of_cart = 0
    for lineitem in all_lineitems:
        quantity_of_lineitem = lineitem.quantity
        total_price_of_cart = total_price_of_cart + (item_price_cart * quantity_of_lineitem)
    new_cart = Cart(total_price=total_price_of_cart, active=True, buyer_id=current_user.id, lineitem_id=lineitem_obj.id)
    db.session.add(new_cart)
    db.session.commit()






