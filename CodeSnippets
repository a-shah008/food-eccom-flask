if current_user.is_authenticated == False:
            flash("Please log in or register first before adding items to your cart.", "warning")
            return redirect(url_for("snack_page"))
        else:
            cart_exists = Cart.query.filter_by(buyer_id=current_user.id).first()
            lineitems = Lineitem.query.filter_by(buyer_id=current_user.id).all()
            total_price_cart = 0
            for lineitem in lineitems:
                product_obj = Product.query.filter_by(id=lineitem.product_id).first()
                price = product_obj.price
                quantity = lineitem.quantity
                total_price_cart = total_price_cart + price * quantity
            if cart_exists == None:
                new_cart = Cart(total_price=total_price_cart, active=True, buyer_id=current_user.id)
                db.session.add(new_cart)
                db.session.commit()
            else:





def DeleteLineitems():
    from app import db
    from app.routes import CurrentCart
    from app.models import Lineitem
    active_cart = CurrentCart()
    lineitems = Lineitem.query.filter_by(cart_id=active_cart.id).all()
    for lineitem in lineitems:
        db.session.delete(lineitem)
        db.session.commit()

def DeleteCarts():
    from app import db
    from app.models import Cart
    from app.routes import CurrentCart
    from flask_login import current_user
    user_active_cart = CurrentCart()
    current_user_id = user_active_cart.user_id
    user_carts = Cart.query.filter_by(buyer_id=current_user_id).all()
    for cart in user_carts:
        db.session.delete(cart)
        db.session.commit()




